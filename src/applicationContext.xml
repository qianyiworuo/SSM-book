<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE beans [
    <!ELEMENT beans (bean*)>
    <!ELEMENT bean (property*)>
    <!ELEMENT property (#PCDATA)>

    <!ATTLIST bean id ID #REQUIRED>
    <!ATTLIST bean class CDATA #IMPLIED>
    <!ATTLIST property name CDATA #IMPLIED>
    <!ATTLIST property ref IDREF #IMPLIED>
]>

<beans>
    <bean id="page" class="com.atguigu.myssm.myspringmvc.PageController"/>

    <!-- DAO -->
    <bean id="userDAO" class="com.wd.book.dao.impl.UserDAOImpl"/>
    <bean id="bookDAO" class="com.wd.book.dao.impl.BookDAOImpl"/>

    <!-- service -->
    <bean id="userService" class="com.wd.book.service.impl.UserServiceImpl">
        <property name="userDAO" ref="userDAO"/>
    </bean>
    <bean id="bookService" class="com.wd.book.service.impl.BookServiceImpl">
        <property name="bookDAO" ref="bookDAO"/>
    </bean>

    <!-- controller-->
    <bean id="user" class="com.wd.book.controller.UserController">
        <property name="userService" ref="userService"/>
    </bean>
    <bean id="book" class="com.wd.book.controller.BookController">
        <property name="bookService" ref="bookService"/>
    </bean>


</beans>